    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "aster.api:create_app",
                "--reload",
                "--factory",
                "--no-use-colors",
                "--no-access-log"
            ],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Docker: Python - Fastapi",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "fastapi"
            }
        }
    ]
}
